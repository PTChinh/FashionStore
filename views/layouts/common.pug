    header.container.d-flex.justify-content-center.bg-dark.border-bottom.border-white
        .col-12.col-md-2.pt-2.pb-2
            img(src='/images/logo.png')
        .col-12.col-md-2.d-flex.align-items-center
            span.header-title
                strong Bee Fashion
        .col-12.col-md-6.p-5.justify-content-center
            div
                form.d-flex.flex-row.justify-content-center
                    span
                        i.fas.fa-search.text-white.d-inline
                    input.d-flex.text-gray.bg-light(type='text', name='', placeholder='Tìm kiếm sản phẩm ...', size='60px')
        .d-flex.d-none.d-md-flex.col-md-2.justify-content-center.align-items-end.pb-3
            span
                a.text-white(href='#')
                    i.far.fa-smile
