                a.text-white(href='#')
                    i.far.fa-heart
            span.text-white
                a.text-white(href='#')
                    i.fas.fa-shopping-cart
    body
        nav.container.bg-warning
            ul.d-flex.justify-content-center.menu.p-3
                li.mr-5.font-weight-bolder Home
                li.mr-5.font-weight-bolder Info
                li.mr-5.font-weight-bolder Product
                li.mr-5.font-weight-bolder About
                li.mr-5.font-weight-bolder Cart
        block content
